{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:7251" }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SecureBankString": "Server=(localdb)\\mssqllocaldb;Database=SecureBankDb;TrustServerCertificate=True;Trusted_Connection=True"
  },
  "ApiSettings": {
    "Secret": "MySecureBankingApplication2024SecretKeyForJWTAuthentication256Bits!@#"
  }
}

