@model SecureBank.UI.Models.DTO.TransferDto

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Edit Transfer</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Transfers" asp-action="Index">Transfers</a></li>
        <li class="breadcrumb-item active text-white">Edit Transfer</li>
    </ol>
</div>

<div class="transfer-page-header">
    <div class="container">
        <h3 class="page-title"><i class="fas fa-edit me-2"></i>Edit Transfer</h3>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Transfer Details</h5>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TransferId" />
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="TransferDate" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Transfer Name/Description</label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Amount" class="form-label">Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Amount" class="form-control" required type="number" step="0.01" min="0.01" />
                                    </div>
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FromAccountNumber" class="form-label">From Account</label>
                                    <input asp-for="FromAccountNumber" class="form-control" readonly />
                                    <small class="form-text text-muted">Account numbers cannot be changed after creation</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ToAccountNumber" class="form-label">To Account</label>
                                    <input asp-for="ToAccountNumber" class="form-control" readonly />
                                    <small class="form-text text-muted">Account numbers cannot be changed after creation</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reference" class="form-label">Reference</label>
                            <input asp-for="Reference" class="form-control" />
                            <span asp-validation-for="Reference" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Transfer Date</label>
                            <input type="text" class="form-control" value="@Model.TransferDate.ToString("MM/dd/yyyy hh:mm tt")" readonly />
                            <small class="form-text text-muted">Transfer date cannot be modified</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>