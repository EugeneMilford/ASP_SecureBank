@model SecureBank.UI.Models.AddTransferViewModel

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Add Transfer</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Transfers" asp-action="Index">Transfers</a></li>
        <li class="breadcrumb-item active text-white">Add Transfer</li>
    </ol>
</div>

<div class="transfer-page-header">
    <div class="container">
        <h3 class="page-title"><i class="fas fa-plus me-2"></i>Add Transfer</h3>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Transfer Details</h5>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Add" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Transfer Name/Description</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter transfer description" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Amount" class="form-label">Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Amount" class="form-control" required type="number" step="0.01" min="0.01" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FromAccountNumber" class="form-label">From Account</label>
                                    <select class="form-select" asp-for="FromAccountNumber" asp-items="ViewBag.Accounts" required>
                                        <option value="">-- Select Source Account --</option>
                                    </select>
                                    <span asp-validation-for="FromAccountNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ToAccountNumber" class="form-label">To Account</label>
                                    <select class="form-select" asp-for="ToAccountNumber" asp-items="ViewBag.Accounts" required>
                                        <option value="">-- Select Destination Account --</option>
                                    </select>
                                    <span asp-validation-for="ToAccountNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reference" class="form-label">Reference (Optional)</label>
                            <input asp-for="Reference" class="form-control" placeholder="Enter reference or memo" />
                            <span asp-validation-for="Reference" class="text-danger"></span>
                        </div>

                        <!-- Hidden fields -->
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="TransferDate" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i>Submit Transfer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>