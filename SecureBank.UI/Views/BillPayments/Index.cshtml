@model IEnumerable<SecureBank.UI.Models.DTO.BillDto>

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Bill Payments</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-primary">Bills</li>
    </ol>
</div>

<div class="bill-page-header">
    <div class="container d-flex justify-content-between align-items-center" style="gap:1rem;">
        <h3 class="page-title"><i class="fas fa-file-invoice-dollar me-2"></i>Bills</h3>
        <a class="add-bill-btn btn btn-secondary" asp-controller="BillPayments" asp-action="Add">
            <i class="fas fa-plus"></i> Add Bill Payment
        </a>
    </div>
</div>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div>
            <div class="bill-custom-table">
                <table>
                    <thead>
                        <tr>
                            <th>Bill Id</th>
                            <th>Biller</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                            <th>Reference</th>
                            <th>Account #</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr class="bill-card">
                                <td>@bill.BillId</td>
                                <td>@bill.Biller</td>
                                <td class="amount">$@bill.Amount</td>
                                <td class="bill-date">@bill.PaymentDate.ToString("MMM dd, yyyy")</td>
                                <td class="ref-number">@bill.ReferenceNumber</td>
                                <td>@bill.AccountNumber</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@bill.BillId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Edit" asp-route-id="@bill.BillId" class="btn btn-secondary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@bill.BillId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-bills">
            <i class="fas fa-file-invoice-dollar fa-2x mb-2"></i>
            <h4>No bills found.</h4>
            <p>All your bills and payments will appear here.</p>
        </div>
    }
</div>

<!-- Features Start -->
<div class="container-xxl feature py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-5 mb-4">Why Choose Secure Bank for Bill Payments?</h1>
                <p class="mb-4">
                    Manage and pay all your bills in one place with Secure Bank. Enjoy secure transactions, instant payments, and reliable support every step of the way. Our bill payments feature is designed to simplify your financial life.
                </p>
            </div>
            <div class="col-lg-6">
                <div class="row g-4 align-items-center">
                    <div class="col-md-6">
                        <div class="row g-4">
                            <div class="col-12 wow fadeIn" data-wow-delay="0.3s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-bolt fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">Instant Payments</h4>
                                    <p class="mb-3">
                                        Pay your bills instantly with just a few clicks. No delays, no hassle—your payments are processed in real time, keeping you up to date.
                                    </p>
                                </div>
                            </div>
                            <div class="col-12 wow fadeIn" data-wow-delay="0.5s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-headset fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">24/7 Support</h4>
                                    <p class="mb-3">
                                        Questions or issues with your bill payments? Our dedicated support team is available around the clock to assist you quickly and efficiently.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 wow fadeIn" data-wow-delay="0.7s">
                        <div class="feature-box border rounded p-4">
                            <i class="fa fa-shield-alt fa-3x text-primary mb-3"></i>
                            <h4 class="mb-3">Secure Transactions</h4>
                            <p class="mb-3">
                                Your financial data is protected with advanced security measures. Every bill payment is encrypted and monitored for your peace of mind.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
