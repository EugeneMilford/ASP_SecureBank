@model IEnumerable<SecureBank.UI.Models.DTO.BillDto>

<style>
    :root {
        --blue1: #1565c0;
        --blue2: #1976d2;
        --blue3: #2196f3;
        --blue4: #bbdefb;
        --blue5: #f5faff;
        --text-dark: #1a2236;
        --border-radius: 7px;
        --card-shadow: 0 2px 8px rgba(21, 101, 192, 0.07);
    }
    body {
        background: var(--blue5);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 15px;
    }
    .page-header {
        background: linear-gradient(90deg, var(--blue2) 60%, var(--blue1) 100%);
        color: #fff;
        padding: 1.1rem 0;
        margin-bottom: 1.2rem;
        border-radius: 0 0 var(--border-radius) var(--border-radius);
        box-shadow: 0 2px 8px rgba(21, 101, 192, 0.11);
    }
    .page-title {
        font-size: 1.5rem;
        font-weight: 500;
        margin: 0;
        letter-spacing: 1px;
    }
    .add-bill-btn {
        background: var(--blue3);
        border: none;
        padding: 7px 18px;
        border-radius: var(--border-radius);
        font-size: 1.04rem;
        font-weight: 500;
        color: #fff;
        text-decoration: none;
        transition: background 0.2s;
        box-shadow: 0 1px 6px rgba(21,101,192,0.09);
    }
    .add-bill-btn:hover {
        background: var(--blue1);
        color: #fff;
    }
    .bill-card {
        border: 1px solid #e3e8f0;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        margin-bottom: 1.2rem;
        background: #fff;
        transition: box-shadow 0.16s;
        overflow: hidden;
    }
    .bill-card:hover {
        box-shadow: 0 4px 14px rgba(21,101,192,0.16);
    }
    .bill-header {
        background: var(--blue4);
        border-bottom: 1px solid #e3e8f0;
        padding: 0.85rem 1.1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .bill-info {
        font-size: 1.08rem;
        font-weight: 600;
        color: var(--blue2);
    }
    .bill-date {
        color: #2c3e50;
        font-size: 0.96rem;
        font-weight: 500;
    }
    .custom-table table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.98rem;
        margin-bottom: 0.2rem;
    }
    .custom-table th,
    .custom-table td {
        padding: 0.47rem 0.37rem;
        text-align: left;
        border-bottom: 1px solid #e6eef6;
        vertical-align: middle;
        font-size: 0.97rem;
    }
    .custom-table th {
        background: var(--blue4);
        color: var(--blue1);
        font-weight: 600;
        font-size: 0.95rem;
        border: none;
        letter-spacing: 0.08em;
    }
    .custom-table tr:last-child td {
        border-bottom: none;
    }
    .amount {
        font-weight: 600;
        color: var(--blue2);
    }
    .ref-number {
        font-size: 0.98em;
        color: #1976d2;
        background: #e3e8f0;
        padding: 2px 8px;
        border-radius: 12px;
    }
    .no-bills {
        padding: 2rem;
        text-align: center;
        color: #1976d2;
        background: var(--blue4);
        border-radius: var(--border-radius);
        margin-top: 2rem;
        box-shadow: 0 1px 8px rgba(21,101,192,0.06);
    }
</style>

<div class="page-header">
    <div class="container d-flex justify-content-between align-items-center" style="gap:1rem;">
        <h3 class="page-title"><i class="fas fa-file-invoice-dollar me-2"></i>Bills</h3>
        <a class="add-bill-btn btn btn-secondary" asp-controller="BillPayments" asp-action="Add">
            <i class="fas fa-plus"></i> Add Bill Payment
        </a>
    </div>
</div>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div>
            <div class="custom-table">
                <table>
                    <thead>
                        <tr>
                            <th>Bill Id</th>
                            <th>Biller</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                            <th>Reference</th>
                            <th>Account #</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr class="bill-card">
                                <td>@bill.BillId</td>
                                <td>@bill.Biller</td>
                                <td class="amount">$@bill.Amount</td>
                                <td class="bill-date">@bill.PaymentDate.ToString("MMM dd, yyyy")</td>
                                <td class="ref-number">@bill.ReferenceNumber</td>
                                <td>@bill.AccountNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-bills">
            <i class="fas fa-file-invoice-dollar fa-2x mb-2"></i>
            <h4>No bills found.</h4>
            <p>All your bills and payments will appear here.</p>
        </div>
    }
</div>
