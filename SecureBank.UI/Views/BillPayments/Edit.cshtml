@model SecureBank.UI.Models.DTO.BillDto

@{
    ViewBag.Title = "Edit Bill Payment";
}

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Bill Payments</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="BillPayments" asp-action="Index">Bills</a></li>
    </ol>
</div>

<br />

<h2>Edit Bill Payment</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BillId" />
    <input type="hidden" asp-for="AccountId" />

    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        @Html.ValidationMessageFor(model => model.Amount)
    </div>
    <div class="form-group">
        <label asp-for="Biller"></label>
        <input asp-for="Biller" class="form-control" />
        @Html.ValidationMessageFor(model => model.Biller)
    </div>
    <div class="form-group">
        <label asp-for="PaymentDate"></label>
        <input asp-for="PaymentDate" type="date" class="form-control" />
        @Html.ValidationMessageFor(model => model.PaymentDate)
    </div>
    <div class="form-group">
        <label asp-for="ReferenceNumber"></label>
        <input asp-for="ReferenceNumber" class="form-control" />
        @Html.ValidationMessageFor(model => model.ReferenceNumber)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
