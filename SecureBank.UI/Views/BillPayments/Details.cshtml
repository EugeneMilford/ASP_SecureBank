@model SecureBank.UI.Models.DTO.BillDto

@{
    ViewBag.Title = "Bill Payment Details";
}

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Bill Payments</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="BillPayments" asp-action="Index">Bills</a></li>
    </ol>
</div>

<br />

<table class="table table-bordered">
    <tr>
        <th>Bill ID</th>
        <td>@Model.BillId</td>
    </tr>
    <tr>
        <th>Account Number</th>
        <td>@Model.AccountNumber</td>
    </tr>
    <tr>
        <th>Amount</th>
        <td>@Model.Amount.ToString("C")</td>
    </tr>
    <tr>
        <th>Biller</th>
        <td>@Model.Biller</td>
    </tr>
    <tr>
        <th>Payment Date</th>
        <td>@Model.PaymentDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Reference Number</th>
        <td>@Model.ReferenceNumber</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

