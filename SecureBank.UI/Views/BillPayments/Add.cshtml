@model SecureBank.UI.Models.AddBillViewModel

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Bill Payments</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="BillPayments" asp-action="Index">Bills</a></li>
    </ol>
</div>

<br />

<h3 class="mt-3">Add Bill Payment</h3>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Account Number</label>
        <select class="form-control" asp-for="AccountId" asp-items="ViewBag.Accounts"></select>
    </div>
    <div class="mt-3">
        <label class="form-label">Amount</label>
        <input type="number" class="form-control" asp-for="Amount" step="0.01" />
    </div>
    <div class="mt-3">
        <label class="form-label">Payment Date</label>
        <input type="date" class="form-control" asp-for="PaymentDate" />
    </div>
    <div class="mt-3">
        <label class="form-label">Biller</label>
        <input type="text" class="form-control" asp-for="Biller" />
    </div>
    <div class="mt-3">
        <label class="form-label">Reference Number</label>
        <input type="text" class="form-control" asp-for="ReferenceNumber" />
    </div>

    <br />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>