@model IEnumerable<SecureBank.UI.Models.DTO.CreditCardDto>

<style>
    :root {
        --orange1: #ff9619;
        --orange2: #ffa94d;
        --orange3: #ffd6b4;
        --orange4: #fff6ec;
        --orange5: #fff9f2;
        --text-dark: #512c07;
        --border-radius: 8px;
        --card-shadow: 0 2px 8px rgba(255, 150, 25, 0.09);
    }
    body {
        background: var(--orange5);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 15px;
    }
    .page-header {
        background: linear-gradient(90deg, var(--orange2) 55%, var(--orange1) 100%);
        color: #fff;
        padding: 1.1rem 0;
        margin-bottom: 1.2rem;
        border-radius: 0 0 var(--border-radius) var(--border-radius);
        box-shadow: 0 2px 8px rgba(255,150,25,0.13);
    }
    .page-title {
        font-size: 1.5rem;
        font-weight: 500;
        margin: 0;
        letter-spacing: 1px;
    }
    .add-card-btn {
        background: var(--orange1);
        border: none;
        padding: 7px 18px;
        border-radius: var(--border-radius);
        font-size: 1.04rem;
        font-weight: 500;
        color: #fff;
        text-decoration: none;
        transition: background 0.2s;
        box-shadow: 0 1px 6px rgba(255,150,25,0.09);
    }
    .add-card-btn:hover {
        background: #e07a08;
        color: #fff;
    }
    .card-card {
        border: 1px solid #ffe5ce;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        margin-bottom: 1.2rem;
        background: #fff;
        transition: box-shadow 0.16s;
        overflow: hidden;
    }
    .card-card:hover {
        box-shadow: 0 4px 14px rgba(255,150,25,0.16);
    }
    .custom-table table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.98rem;
        margin-bottom: 0.2rem;
    }
    .custom-table th,
    .custom-table td {
        padding: 0.47rem 0.37rem;
        text-align: left;
        border-bottom: 1px solid #ffe5ce;
        vertical-align: middle;
        font-size: 0.97rem;
    }
    .custom-table th {
        background: var(--orange3);
        color: var(--orange1);
        font-weight: 600;
        font-size: 0.95rem;
        border: none;
        letter-spacing: 0.08em;
    }
    .custom-table tr:last-child td {
        border-bottom: none;
    }
    .amount {
        font-weight: 600;
        color: var(--orange1);
    }
    .card-type {
        font-size: 0.97em;
        padding: 3px 13px;
        border-radius: 14px;
        font-weight: 600;
        background: var(--orange4);
        color: var(--orange1);
        border: 1px solid var(--orange3);
        display: inline-block;
        text-transform: uppercase;
    }
    .expiry-badge {
        font-size: 0.96em;
        background: #fff3e0;
        color: #e07a08;
        padding: 2px 10px;
        border-radius: 12px;
    }
    .no-cards {
        padding: 2rem;
        text-align: center;
        color: var(--orange1);
        background: var(--orange3);
        border-radius: var(--border-radius);
        margin-top: 2rem;
        box-shadow: 0 1px 8px rgba(255,150,25,0.07);
    }
</style>

<div class="page-header">
    <div class="container d-flex justify-content-between align-items-center" style="gap:1rem;">
        <h3 class="page-title"><i class="fas fa-credit-card me-2"></i>Credit Cards</h3>
        <a class="add-card-btn btn btn-secondary" asp-controller="CreditCards" asp-action="Add">
            <i class="fas fa-plus"></i> Add Credit Card
        </a>
    </div>
</div>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div>
            <div class="custom-table">
                <table>
                    <thead>
                        <tr>
                            <th>Credit Id</th>
                            <th>Card Number</th>
                            <th>Card Type</th>
                            <th>Credit Limit</th>
                            <th>Current Balance</th>
                            <th>Account #</th>
                            <th>Expiry</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var card in Model)
                        {
                            <tr class="card-card">
                                <td>@card.CreditId</td>
                                <td>@card.CardNumber</td>
                                <td><span class="card-type">@card.CardType</span></td>
                                <td class="amount">$@card.CreditLimit</td>
                                <td class="amount">$@card.CurrentBalance</td>
                                <td>@card.AccountNumber</td>
                                <td><span class="expiry-badge">@card.ExpiryDate.ToString("MM/yy")</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-cards">
            <i class="fas fa-credit-card fa-2x mb-2"></i>
            <h4>No credit cards found.</h4>
            <p>Your credit cards will appear here.</p>
        </div>
    }
</div>