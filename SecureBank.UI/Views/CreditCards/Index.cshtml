@model IEnumerable<SecureBank.UI.Models.DTO.CreditCardDto>

<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Credit Cards</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-primary">Credit Card</li>
    </ol>
</div>

<div class="credit-page-header">
    <div class="container d-flex justify-content-between align-items-center" style="gap:1rem;">
        <h3 class="page-title"><i class="fas fa-credit-card me-2"></i>Credit Cards</h3>
        <a class="add-card-btn btn btn-secondary" asp-controller="CreditCards" asp-action="Add">
            <i class="fas fa-plus"></i> Add Credit Card
        </a>
    </div>
</div>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div>
            <div class="credit-custom-table">
                <table>
                    <thead>
                        <tr>
                            <th>Credit Id</th>
                            <th>Card Number</th>
                            <th>Card Type</th>
                            <th>Credit Limit</th>
                            <th>Current Balance</th>
                            <th>Account #</th>
                            <th>Expiry</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var card in Model)
                        {
                            <tr class="card-card">
                                <td>@card.CreditId</td>
                                <td>@card.CardNumber</td>
                                <td><span class="card-type">@card.CardType</span></td>
                                <td class="amount">$@card.CreditLimit</td>
                                <td class="amount">$@card.CurrentBalance</td>
                                <td>@card.AccountNumber</td>
                                <td><span class="expiry-badge">@card.ExpiryDate.ToString("MM/yy")</span></td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@card.CreditId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Edit" asp-route-id="@card.CreditId" class="btn btn-secondary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@card.CreditId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-cards">
            <i class="fas fa-credit-card fa-2x mb-2"></i>
            <h4>No credit cards found.</h4>
            <p>Your credit cards will appear here.</p>
        </div>
    }
</div>

<!-- Features Start -->
<div class="container-xxl feature py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-5 mb-4">Why Choose Secure Bank for Your Credit Card Needs?</h1>
                <p class="mb-4">
                    Discover a seamless experience with Secure Bank credit cards. Enjoy fast approvals, enhanced security, and round-the-clock support. Our credit card features are designed to give you control and confidence in your spending.
                </p>
            </div>
            <div class="col-lg-6">
                <div class="row g-4 align-items-center">
                    <div class="col-md-6">
                        <div class="row g-4">
                            <div class="col-12 wow fadeIn" data-wow-delay="0.3s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-credit-card fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">Fast Approvals</h4>
                                    <p class="mb-3">
                                        Apply and get approved for your Secure Bank credit card in no time. Enjoy a streamlined process with minimal wait.
                                    </p>
                                </div>
                            </div>
                            <div class="col-12 wow fadeIn" data-wow-delay="0.5s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-headset fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">24/7 Support</h4>
                                    <p class="mb-3">
                                        Have questions or concerns about your credit card? Our support team is available any time you need assistance.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 wow fadeIn" data-wow-delay="0.7s">
                        <div class="feature-box border rounded p-4">
                            <i class="fa fa-shield-alt fa-3x text-primary mb-3"></i>
                            <h4 class="mb-3">Advanced Security</h4>
                            <p class="mb-3">
                                Protect your transactions with Secure Bank’s advanced card security measures, including real-time alerts and fraud monitoring.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>