@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureBank</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .access-denied-container {
            width: 100%;
            max-width: 650px;
            padding: 15px;
        }

        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            animation: fadeInUp 0.5s ease-out;
        }

        .card-body {
            padding: 3rem;
        }

        .access-denied-icon {
            animation: shake 0.5s ease-in-out;
            margin-bottom: 2rem;
        }

        .access-denied-icon svg {
            color: #dc3545;
        }

        h1 {
            color: #dc3545;
            font-weight: 700;
        }

        .lead {
            color: #6c757d;
            font-size: 1.1rem;
        }

        .alert-warning {
            background-color: #fff3cd;
            border: none;
            text-align: left;
            border-radius: 0.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-outline-secondary {
            border-radius: 0.5rem;
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .footer-text {
            text-align: center;
            margin-top: 1.5rem;
            color: #6c757d;
        }

    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="card">
            <div class="card-body text-center">
                <div class="access-denied-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-shield-exclamation" viewBox="0 0 16 16">
                        <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z" />
                        <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                    </svg>
                </div>

                <h1 class="display-4 mb-3">Access Denied</h1>
                <h5 class="text-muted mb-4">403 - Forbidden</h5>

                <p class="lead mb-4">
                    Sorry, you don't have permission to access this resource.
                </p>

                <div class="alert alert-warning mb-4" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-info-circle-fill me-3 mt-1" style="font-size: 1.5rem;"></i>
                        <div class="text-start">
                            <strong>Why am I seeing this?</strong>
                            <p class="mb-0 mt-2">
                                This page requires special permissions or a different user role.
                                Please contact your administrator if you believe you should have access.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="bi bi-house-door me-2"></i>Go to Home
                    </a>
                    <a href="@Url.Action("Logout", "AuthUser")" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>

        <div class="footer-text">
            <p class="mb-0">
                <small>
                    If you continue to experience issues, please contact support at
                    <a href="mailto:support@securebank.com" style="color: #667eea; text-decoration: none;">support@securebank.com</a>
                </small>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="access-denied-icon mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-shield-exclamation text-danger" viewBox="0 0 16 16">
                            <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z" />
                            <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                        </svg>
                    </div>

                    <h1 class="display-4 fw-bold text-danger mb-3">Access Denied</h1>
                    <h5 class="text-muted mb-4">403 - Forbidden</h5>

                    <p class="lead mb-4">
                        Sorry, you don't have permission to access this resource.
                    </p>

                    <div class="alert alert-warning border-0 mb-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Why am I seeing this?</strong>
                        <p class="mb-0 mt-2">
                            This page requires special permissions or a different user role.
                            Please contact your administrator if you believe you should have access.
                        </p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-house-door me-2"></i>Go to Home
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mt-4 text-muted">
                            <small>Logged in as: <strong>@User.Identity.Name</strong></small>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">
                    <small>
                        If you continue to experience issues, please contact support at
                        <a href="mailto:support@securebank.com">support@securebank.com</a>
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .card {
        border-radius: 1rem;
        animation: fadeInUp 0.5s ease-out;
    }

    .access-denied-icon {
        animation: shake 0.5s ease-in-out;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .alert-warning {
        background-color: #fff3cd;
        text-align: left;
    }
