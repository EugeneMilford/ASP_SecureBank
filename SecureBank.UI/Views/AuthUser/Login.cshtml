@model SecureBank.UI.Models.DTO.UserLoginRequestDto

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureBank</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    <style>
        /* Page background - light blue theme */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #e6f4ff 0%, #cfe9ff 50%, #a9ddff 100%);
            overflow: hidden;
        }

        /* Soft floating circles for subtle motion */
        .bg-shapes {
            position: absolute;
            inset: 0;
            z-index: 0;
            pointer-events: none;
        }
        .bg-shapes .circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255,255,255,0.35);
            filter: blur(18px);
            animation: float 16s ease-in-out infinite;
        }
        .bg-shapes .c1 { width: 360px; height: 360px; top: -80px; left: -120px; }
        .bg-shapes .c2 { width: 240px; height: 240px; right: -60px; top: 30%; animation-delay: 2s; }
        .bg-shapes .c3 { width: 420px; height: 420px; bottom: -140px; left: 25%; animation-delay: 4s; }

        /* Centered login container */
        .login-wrap {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 980px;
            margin: 3rem;
            display: grid;
            grid-template-columns: 1fr 420px;
            gap: 2rem;
            align-items: center;
        }

        /* Left marketing panel */
        .promo {
            color: #0b4f8a;
            padding: 3rem;
            border-radius: 20px;
            background: linear-gradient(180deg, rgba(255,255,255,0.55), rgba(255,255,255,0.35));
            box-shadow: 0 10px 30px rgba(9, 56, 91, 0.10);
        }
        .promo h1 {
            font-size: 2.8rem;
            margin-bottom: 0.25rem;
            color: #0b4f8a;
        }
        .promo p.lead {
            color: rgba(11,79,138,0.9);
            font-size: 1.05rem;
            margin-bottom: 1.25rem;
            line-height: 1.5;
        }
        .promo .features {
            display:flex;
            gap:1rem;
            flex-wrap:wrap;
            margin-top:1rem;
        }
        .promo .feature {
            background: rgba(11,79,138,0.06);
            color: #034771;
            padding: 0.6rem 0.9rem;
            border-radius: 10px;
            font-weight:600;
            display:flex;
            gap:0.6rem;
            align-items:center;
        }

        /* Login card (right) */
        .login-card {
            background: linear-gradient(180deg, rgba(255,255,255,0.98), rgba(255,255,255,0.95));
            padding: 2.25rem;
            border-radius: 18px;
            box-shadow: 0 12px 30px rgba(9, 56, 91, 0.12);
            border: 1px solid rgba(11,79,138,0.06);
        }
        .brand {
            display:flex;
            align-items:center;
            gap:0.75rem;
            margin-bottom: 1rem;
        }
        .brand .logo {
            width:64px;
            height:64px;
            border-radius:12px;
            display:inline-flex;
            align-items:center;
            justify-content:center;
            background: linear-gradient(135deg,#bfe9ff,#8fd6ff);
            color:#023e63;
            font-size:1.8rem;
            box-shadow: 0 6px 18px rgba(11,79,138,0.08);
        }
        .brand h2 {
            margin:0;
            color:#023e63;
            font-size:1.4rem;
            letter-spacing:0.4px;
        }

        .form-control {
            border-radius: 10px;
            height: calc(2.25rem + 1rem);
            padding: 0.75rem 0.9rem;
            border: 1px solid rgba(3,71,113,0.12);
        }
        .form-label {
            font-weight:600;
            color:#034771;
            font-size:0.92rem;
        }

        .btn-submit {
            background: linear-gradient(90deg,#2b9bff,#0077e6);
            border: none;
            color: white;
            font-weight:700;
            padding: 0.85rem 1rem;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(43,155,255,0.22);
            transition: transform .12s ease, box-shadow .12s ease;
        }
        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 14px 36px rgba(43,155,255,0.28);
        }

        .alt-actions {
            margin-top: 1rem;
            display:flex;
            justify-content:space-between;
            align-items:center;
            gap:1rem;
        }
        .text-muted a { color: #045a9a; font-weight:600; text-decoration:none; }
        .text-muted a:hover { text-decoration:underline; }

    </style>
</head>
<body>
    <div class="bg-shapes" aria-hidden="true">
        <div class="circle c1"></div>
        <div class="circle c2"></div>
        <div class="circle c3"></div>
    </div>

    <div class="login-wrap">
        <!-- Promo / branding column -->
        <div class="promo">
            <h1>Welcome back</h1>
            <p class="lead">SecureBank — fast, clear and secure online banking. Sign in to manage your accounts, pay bills, and transfer funds safely.</p>

            <div class="features" aria-hidden="true">
                <div class="feature"><i class="bi bi-shield-check"></i> Secure</div>
                <div class="feature"><i class="bi bi-lightning-charge"></i> Fast</div>
                <div class="feature"><i class="bi bi-phone"></i> Mobile-ready</div>
            </div>

            <div style="margin-top:1.6rem; color:#013d5f;">
                <strong>New here?</strong>
                <p style="margin:6px 0 0;">Create an account to get started or use the demo credentials for quick access.</p>
            </div>
        </div>

        <!-- Login form card -->
        <div class="login-card">
            <div class="brand">
                <div class="logo"><i class="bi bi-bank2"></i></div>
                <div>
                    <h2>SecureBank</h2>
                    <div style="font-size:0.88rem; color:#0b4f8a; opacity:0.85;">Sign in to your account</div>
                </div>
            </div>

            <form asp-action="Login" asp-controller="AuthUser" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" id="passwordField" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>

                    <button type="button" id="togglePassword" class="btn btn-sm" style="position:absolute; right:8px; top:38px; background:transparent; border:none; color:#045a9a;">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label text-muted" for="rememberMe">Remember me</label>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-submit btn-lg">Sign In</button>
                </div>

                <div class="alt-actions">
                    <div class="text-muted small">
                        <a href="@Url.Action("Register", "AuthUser")">Create account</a>
                    </div>
                    <div class="text-muted small">
                        <a href="#">Forgot password?</a>
                    </div>
                </div>
            </form>

            <hr style="margin:1.25rem 0; border-color: rgba(3,71,113,0.06)" />
        </div>
    </div>

    <!-- JS dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle password visibility
        (function () {
            const toggle = document.getElementById('togglePassword');
            const pwd = document.getElementById('passwordField');
            if (!toggle || !pwd) return;
            toggle.addEventListener('click', function () {
                if (pwd.type === 'password') {
                    pwd.type = 'text';
                    toggle.innerHTML = '<i class="bi bi-eye-slash"></i>';
                } else {
                    pwd.type = 'password';
                    toggle.innerHTML = '<i class="bi bi-eye"></i>';
                }
            });
        })();
    </script>
</body>
</html>
