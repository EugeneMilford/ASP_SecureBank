@model SecureBank.UI.Models.DTO.AccountDto

<h1 class="mt-3">Edit Account</h1>

@if (Model is not null)
{
    <form method="post" id="edit-account-form">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="AccountId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Account Number</label>
            <input type="text" class="form-control" asp-for="AccountNumber" />
        </div>

        <div class="mt-3">
            <label class="form-label">Balanace</label>
            <input type="text" class="form-control" asp-for="Balance" />
        </div>

        <div class="mt-3">
            <label class="form-label">Account Type</label>
            <input type="text" class="form-control" asp-for="AccountType" />
        </div>

        <div class="mt-3">
            <label class="form-label">Created Date</label>
            <input type="text" class="form-control" asp-for="CreatedDate" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <!-- Delete button triggers modal -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                Delete
            </button>
        </div>
    </form>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete account <strong>@Model.AccountNumber</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <!-- Submit delete POST to Accounts/Delete -->
                    <form method="post" asp-controller="Accounts" asp-action="Delete" style="display:inline;">
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="AccountNumber" />
                        <input type="hidden" asp-for="Balance" />
                        <input type="hidden" asp-for="AccountType" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}