@model IEnumerable<SecureBank.UI.Models.DTO.AccountDetailsDto>

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Accounts</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-primary">Accounts</li>
    </ol>
</div>

<div class="account-page-header">
    <div class="container d-flex justify-content-between align-items-center" style="gap:1rem;">
        <h3 class="page-title"><i class="fas fa-university me-2"></i>Accounts</h3>
        <a class="add-account-btn btn btn-secondary" asp-controller="Accounts" asp-action="Add">
            <i class="fas fa-plus"></i> Add Account
        </a>
    </div>
</div>

<div class="container">
    @foreach (var account in Model)
    {
        <div class="account-card card">
            <div class="account-header card-header">
                <div>
                    <span class="account-number">Account #@account.AccountNumber</span>
                    <span class="account-type">@account.AccountType</span>
                </div>
                <div class="balance-info">
                    <span>Balance: <span class="balance-amount">@account.Balance</span></span>
                    <span class="created-date">Created: @account.CreatedDate</span>
                    <a asp-controller="Accounts" asp-action="Edit" asp-route-id="@account.AccountId"
                       class="btn btn-secondary">Edit</a>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="account-section-header">Loans</div>
                    <div class="account-custom-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Loan Id</th>
                                    <th>Amount</th>
                                    <th>Interest Rate</th>
                                    <th>Remaining</th>
                                    <th>Paid Off</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in account.Loans)
                                {
                                    <tr>
                                        <td>@loan.LoanId</td>
                                        <td class="amount">@loan.LoanAmount</td>
                                        <td>@loan.InterestRate</td>
                                        <td class="amount">@loan.RemainingAmount</td>
                                        <td>@loan.IsLoanPaidOff</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    <div class="account-section-header">Credit Cards</div>
                    <div class="account-custom-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Card #</th>
                                    <th>Type</th>
                                    <th>Limit</th>
                                    <th>Balance</th>
                                    <th>Expiry</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var card in account.CreditCards)
                                {
                                    <tr>
                                        <td>@card.CardNumber</td>
                                        <td>@card.CardType</td>
                                        <td class="amount">@card.CreditLimit</td>
                                        <td class="amount">@card.CurrentBalance</td>
                                        <td>@card.ExpiryDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    <div class="account-section-header">Bills</div>
                    <div class="account-custom-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Bill Id</th>
                                    <th>Biller</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Reference</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bill in account.Bills)
                                {
                                    <tr>
                                        <td>@bill.BillId</td>
                                        <td>@bill.Biller</td>
                                        <td class="amount">@bill.Amount</td>
                                        <td>@bill.PaymentDate.ToShortDateString()</td>
                                        <td>@bill.ReferenceNumber</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    <div class="account-section-header">Investments</div>
                    <div class="account-custom-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Investment Id</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Current Value</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inv in account.Investments)
                                {
                                    <tr>
                                        <td>@inv.InvestmentId</td>
                                        <td>@inv.InvestmentType</td>
                                        <td class="amount">@inv.InvestmentAmount</td>
                                        <td class="amount">@inv.CurrentValue</td>
                                        <td>@inv.InvestmentDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    <div class="account-section-header">Transfers</div>
                    <div class="account-custom-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Transfer Id</th>
                                    <th>Name</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Reference</th>
                                    <th>Account #</th>
                                    <th>From Account #</th>
                                    <th>To Account #</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var transfer in account.Transfers)
                                    {
                                        <tr class="transfer-row">
                                            <td>@transfer.TransferId</td>
                                            <td>@transfer.Name</td>
                                            <td class="amount">@transfer.Amount</td>
                                            <td>@transfer.TransferDate.ToShortDateString()</td>
                                            <td>@transfer.Reference</td>
                                            <td>@transfer.AccountNumber</td>
                                            <td>@transfer.FromAccountNumber</td>
                                            <td>@transfer.ToAccountNumber</td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Features Start -->
<div class="container-xxl feature py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-5 mb-4">Why Open Your Account with Secure Bank?</h1>
                <p class="mb-4">
                    Experience secure, flexible, and convenient banking with Secure Bank accounts. Open an account in minutes and gain access to powerful tools for managing your finances, tracking your spending, and keeping your money safe.
                </p>
            </div>
            <div class="col-lg-6">
                <div class="row g-4 align-items-center">
                    <div class="col-md-6">
                        <div class="row g-4">
                            <div class="col-12 wow fadeIn" data-wow-delay="0.3s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-university fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">Quick Account Setup</h4>
                                    <p class="mb-3">
                                        Open your Secure Bank account quickly and easily. Enjoy a hassle-free process with instant online access to your funds.
                                    </p>
                                </div>
                            </div>
                            <div class="col-12 wow fadeIn" data-wow-delay="0.5s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-headset fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">24/7 Customer Service</h4>
                                    <p class="mb-3">
                                        Need help with your account? Our friendly support team is available around the clock to assist you whenever you need it.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 wow fadeIn" data-wow-delay="0.7s">
                        <div class="feature-box border rounded p-4">
                            <i class="fa fa-lock fa-3x text-primary mb-3"></i>
                            <h4 class="mb-3">Secure Banking</h4>
                            <p class="mb-3">
                                Rest easy knowing your money and information are protected by Secure Bank’s advanced security technologies and fraud prevention tools.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


