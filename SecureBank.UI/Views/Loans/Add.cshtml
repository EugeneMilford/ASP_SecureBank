@model SecureBank.UI.Models.DTO.LoanDto

@{
    ViewBag.Title = "Add Loan";
}

<!-- Page Header -->
<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Loans</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Loans" asp-action="Index">Loans</a></li>
    </ol>
</div>

<br />

<h2>Add Loan</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Account Number</label>
        <select class="form-control" asp-for="AccountId" asp-items="ViewBag.Accounts"></select>
    </div>
    <div class="form-group">
        <label asp-for="LoanAmount"></label>
        <input asp-for="LoanAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InterestRate"></label>
        <input asp-for="InterestRate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RemainingAmount"></label>
        <input asp-for="RemainingAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsLoanPaidOff"></label>
        <input asp-for="IsLoanPaidOff" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label asp-for="LoanStartDate"></label>
        <input asp-for="LoanStartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LoanEndDate"></label>
        <input asp-for="LoanEndDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MonthlyRepayment"></label>
        <input asp-for="MonthlyRepayment" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>