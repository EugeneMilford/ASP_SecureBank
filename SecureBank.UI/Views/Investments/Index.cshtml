@model IEnumerable<SecureBank.UI.Models.DTO.InvestmentDto>

<div class="container-fluid accounts-breadcrumb text-center py-5">
    <h4 class="text-white display-4 mb-4">Investments</h4>
    <ol class="breadcrumb d-flex justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-primary">Investments</li>
    </ol>
</div>

<div class="page-header">
    <div class="container d-flex justify-content-between align-items-center" style="gap:1rem;">
        <h3 class="page-title"><i class="fas fa-chart-line me-2"></i>Investments</h3>
        <a class="add-investment-btn btn btn-secondary" asp-controller="Investments" asp-action="Add">
            <i class="fas fa-plus"></i> Add Investment
        </a>
    </div>
</div>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div>
            <div class="custom-table">
                <table>
                    <thead>
                        <tr>
                            <th>Investment Id</th>
                            <th>Account #</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Current Value</th>
                            <th>Date</th>
                            <th>Returns</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var investment in Model)
                        {
                            var isNegative = investment.Returns < 0;
                            <tr class="invest-card">
                                <td>@investment.InvestmentId</td>
                                <td>@investment.AccountNumber</td>
                                <td><span class="type-badge">@investment.InvestmentType</span></td>
                                <td class="amount">$@investment.InvestmentAmount</td>
                                <td class="amount">$@investment.CurrentValue</td>
                                <td>@investment.InvestmentDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="returns-badge @(isNegative ? "negative" : "")">
                                        @(isNegative ? "-" : "+")$@Math.Abs(investment.Returns)
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@investment.InvestmentId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Edit" asp-route-id="@investment.InvestmentId" class="btn btn-secondary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@investment.InvestmentId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-investments">
            <i class="fas fa-chart-line fa-2x mb-2"></i>
            <h4>No investments found.</h4>
            <p>Your investments will appear here.</p>
        </div>
    }
</div>

<!-- Features Start -->
<div class="container-xxl feature py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-5 mb-4">Why Choose Secure Bank for Investments?</h1>
                <p class="mb-4">
                    Take control of your financial future with Secure Bank’s investment services. Enjoy expert advice, real-time portfolio tracking, and secure transactions—designed to help you grow your wealth with ease.
                </p>
            </div>
            <div class="col-lg-6">
                <div class="row g-4 align-items-center">
                    <div class="col-md-6">
                        <div class="row g-4">
                            <div class="col-12 wow fadeIn" data-wow-delay="0.3s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-chart-line fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">Expert Insights</h4>
                                    <p class="mb-3">
                                        Get guidance from investment experts to help you make informed decisions. We provide analysis and recommendations tailored for your goals.
                                    </p>
                                </div>
                            </div>
                            <div class="col-12 wow fadeIn" data-wow-delay="0.5s">
                                <div class="feature-box border rounded p-4">
                                    <i class="fa fa-clock fa-3x text-primary mb-3"></i>
                                    <h4 class="mb-3">Real-Time Tracking</h4>
                                    <p class="mb-3">
                                        Monitor your investment portfolio in real time. Stay updated on performance and market trends at a glance, anytime.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 wow fadeIn" data-wow-delay="0.7s">
                        <div class="feature-box border rounded p-4">
                            <i class="fa fa-shield-alt fa-3x text-primary mb-3"></i>
                            <h4 class="mb-3">Secure Transactions</h4>
                            <p class="mb-3">
                                Invest with peace of mind. Your transactions and data are protected by advanced security measures and encryption.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>