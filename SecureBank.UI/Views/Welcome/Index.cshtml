@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureBank</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        /* Animated background circles */
        .background-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 20s infinite ease-in-out;
        }

        .shape:nth-child(1) {
            width: 300px;
            height: 300px;
            top: -100px;
            left: -100px;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 200px;
            height: 200px;
            top: 50%;
            right: -50px;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            width: 400px;
            height: 400px;
            bottom: -150px;
            left: 30%;
            animation-delay: 4s;
        }

        /* Main content */
        .welcome-container {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 700px;
            padding: 2rem;
        }

        .logo-container {
            margin-bottom: 2rem;
            animation: fadeInDown 1s ease-out;
        }

        .logo {
            width: 120px;
            height: 120px;
            background: white;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            margin-bottom: 1.5rem;
        }

        .logo i {
            font-size: 3.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        h1 {
            color: white;
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            animation: fadeInDown 1s ease-out 0.2s backwards;
        }

        .tagline {
            color: rgba(255, 255, 255, 0.95);
            font-size: 1.5rem;
            font-weight: 300;
            margin-bottom: 1rem;
            animation: fadeInDown 1s ease-out 0.4s backwards;
        }

        .description {
            color: rgba(255, 255, 255, 0.85);
            font-size: 1.1rem;
            margin-bottom: 3rem;
            line-height: 1.6;
            animation: fadeInDown 1s ease-out 0.6s backwards;
        }

        .button-container {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
            animation: fadeInUp 1s ease-out 0.8s backwards;
        }

        .btn-custom {
            padding: 1rem 3rem;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .btn-login {
            background: white;
            color: #667eea;
            border: 3px solid white;
        }

        .btn-login:hover {
            background: transparent;
            color: white;
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .btn-register {
            background: transparent;
            color: white;
            border: 3px solid white;
        }

        .btn-register:hover {
            background: white;
            color: #667eea;
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .features {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin-top: 4rem;
            flex-wrap: wrap;
            animation: fadeInUp 1s ease-out 1s backwards;
        }

        .feature {
            color: white;
            text-align: center;
        }

        .feature i {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .feature h5 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .feature p {
            font-size: 0.95rem;
            opacity: 0.85;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            h1 {
                font-size: 2.5rem;
            }

            .tagline {
                font-size: 1.2rem;
            }

            .description {
                font-size: 1rem;
            }

            .button-container {
                flex-direction: column;
                align-items: center;
            }

            .btn-custom {
                width: 100%;
                max-width: 300px;
            }

            .features {
                gap: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="background-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="welcome-container">
        <div class="logo-container">
            <div class="logo">
                <i class="bi bi-bank2"></i>
            </div>
            <h1>SecureBank</h1>
        </div>

        <p class="tagline">Your Trusted Banking Partner</p>
        <p class="description">
            Experience secure, convenient, and modern banking.
            Manage your accounts, transfer funds, pay bills, and much more - all in one place.
        </p>

        <div class="button-container">
            <a href="@Url.Action("Login", "AuthUser")" class="btn-custom btn-login">
                <i class="bi bi-box-arrow-in-right"></i>
                Login
            </a>
            <a href="@Url.Action("Register", "AuthUser")" class="btn-custom btn-register">
                <i class="bi bi-person-plus"></i>
                Register
            </a>
        </div>

        <div class="features">
            <div class="feature">
                <i class="bi bi-shield-check"></i>
                <h5>Secure</h5>
                <p>Bank-level security</p>
            </div>
            <div class="feature">
                <i class="bi bi-lightning-charge"></i>
                <h5>Fast</h5>
                <p>Instant transactions</p>
            </div>
            <div class="feature">
                <i class="bi bi-phone"></i>
                <h5>24/7 Access</h5>
                <p>Anytime, anywhere</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>